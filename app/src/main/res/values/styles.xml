<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#ffffff</item>
    </style>

    <!--theme for App bar-->
    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <!--theme for menu that pops-->
    <style name="AppTheme.PopupOverlay"  parent="Theme.AppCompat.Light"/>

    <style name="CardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/omiwa</item>
    </style>

    <style name="videoPlayerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2D2E2E</item>
    </style>

    <style name="FontforTitle">
        <item name="fontFamily">@font/omiwa</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragLatestCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="LatestCardViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LatestCardGenre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="DetailsTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="Rating_Bar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:numStars">10</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:isIndicator">true</item>
        <item name="android:rating">7.2</item>


    </style>

    <style name="RecyclerHeadingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="MiniRecyclers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>
