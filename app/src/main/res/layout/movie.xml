<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag1"
    tools:context=".movie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/movieView"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_margin="8dp"
            android:src="@drawable/top4" />


        <TextView
            android:id="@+id/textV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/neo_latina"
            android:text="@string/MovieName"
            android:textColor="#000000"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textV2"
                style="@style/videoPlayerText"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/year" />

            <TextView
                android:id="@+id/textV3"
                style="@style/videoPlayerText"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100dp"
                android:fontFamily="@font/neo_latina"
                android:text="@string/genre" />

            <TextView
                android:id="@+id/textV4"
                style="@style/videoPlayerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="end"
                android:text="@string/agegroup" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/frag1"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neo_latina"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="@string/des" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/neo_latina"
                    android:paddingLeft="8dp"
                    android:text="@string/starring" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/neo_latina"
                    android:paddingLeft="8dp"
                    android:text="@string/director" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/frag1"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shareV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/wishV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_wishlist" />

                <com.like.LikeButton
                    android:id="@+id/heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:icon_size="16dp"
                    app:icon_type="heart" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>