        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            style="@style/FragLatestCardStyle"
            app:cardCornerRadius="4dp"
            app:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backforcard">

                <ImageView
                    android:id="@+id/listimage"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ac11" />

                <TextView
                    android:id="@+id/listtitle"
                    style="@style/LatestCardViewTitle"
                    android:layout_toRightOf="@id/listimage"
                    android:text="BAAGHI THREE" />

                <TextView
                    android:id="@+id/listgenre"
                    style="@style/LatestCardGenre"
                    android:layout_below="@id/listtitle"
                    android:layout_toRightOf="@id/listimage"
                    android:text="Action,Drama" />

                <TextView
                    android:id="@+id/listrating"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/listgenre"
                    android:layout_toRightOf="@id/listimage"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="bottom"
                    android:paddingLeft="12dp"
                    android:text="1.9/10" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

