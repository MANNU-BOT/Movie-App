<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag1"
    tools:context=".movie2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/movieViewE"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/titleE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/stiffbrushjk"
            android:text="@string/MovieName"
            android:textColor="#000000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/originalTitleE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:text="original title"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yearE"
                style="@style/videoPlayerText"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="release_date" />

            <TextView
                android:id="@+id/genreE"
                style="@style/videoPlayerText"
                android:layout_marginLeft="12dp"
                android:paddingBottom="8dp"
                android:text="genres" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/frag1"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plotE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="@string/des" />


                <TextView
                    android:id="@+id/taglineE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="8dp"
                    android:text="Tagline-" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/frag1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/countryE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Country-" />

                <TextView
                    android:id="@+id/languageE"
                    style="@style/DetailsTextStyle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Languages-" />


                <TextView
                    android:id="@+id/runtimeE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Runtime-" />

                <TextView
                    android:id="@+id/audienceE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Audience-" />

                <TextView
                    android:id="@+id/votesE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Votes-" />

                <TextView
                    android:id="@+id/votesAvgE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Vote Average-" />


                <TextView
                    android:id="@+id/popularityE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Popularity-" />

                <TextView
                    android:id="@+id/budgetE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Budget-" />

                <TextView
                    android:id="@+id/revenueE"
                    style="@style/DetailsTextStyle"
                    android:layout_marginTop="10dp"
                    android:text="Revenue-" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/frag1"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/homeE"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:elevation="16dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/frag1" />

                <ImageButton
                    android:id="@+id/youtubeE"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_youtube" />


                <ImageButton
                    android:id="@+id/shareE"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_share"
                    android:tint="@color/frag1" />


                <com.like.LikeButton
                    android:id="@+id/wishE"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    app:icon_size="10dp"
                    app:icon_type="star" />

                <com.like.LikeButton
                    android:id="@+id/heartE"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    app:icon_size="10dp"
                    app:icon_type="heart" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>